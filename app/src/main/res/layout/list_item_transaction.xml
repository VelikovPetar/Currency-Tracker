<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginEnd="8dp"
  android:layout_marginStart="8dp"
  android:layout_marginTop="8dp"
  app:cardCornerRadius="2dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
      android:id="@+id/imgTransactionCurrencyIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:adjustViewBounds="true"
      android:maxHeight="48dp"
      android:maxWidth="48dp"
      android:src="@drawable/fab_add" />

    <TextView
      android:id="@+id/txtTransactionCurrencyName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_toEndOf="@id/imgTransactionCurrencyIcon"
      android:textSize="18sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtTransactionDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/imgTransactionCurrencyIcon"
      android:textSize="15sp" />

    <TextView
      android:id="@+id/txtTransactionCoinAmount"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/txtTransactionDate"
      android:textSize="15sp" />

    <TextView
      android:id="@+id/txtCoinValueAtPurchaseTime"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/txtTransactionCoinAmount"
      android:textSize="15sp" />
  </RelativeLayout>
</android.support.v7.widget.CardView>